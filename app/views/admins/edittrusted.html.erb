<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				
					Create Trusted By Thounds
				
				
			</div>

<div class="row" style="margin-top:25px;">	
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
    <%=form_for @trusted, :url => {:action => 'trustupdate'},:html => {:class => "form-horizontal"} do |f| %>

         <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label" style="font-weight:bold;">Name</label>
           <%= hidden_field_tag 'id',params[:id]%>
          <div class="col-sm-10">
            <%= text_field_tag 'trusted[name]' , @trusted.name,class: 'form-control',:required => true %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputdesc" class="col-sm-2 control-label" style="font-weight: bold;">Description</label>
          <div class="col-sm-10">
            <%= f.text_area :description, :class => 'ckeditor' %>

          </div>
        </div>
        
       
         <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label" style="font-weight: bold;">Company</label>
          <div class="col-sm-10">
            <%= text_field_tag 'trusted[company]' , @trusted.company,class: 'form-control',:required => true %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label" style="font-weight: bold;">Rating</label>
          <div class="col-sm-10">
          <%= text_field_tag 'trusted[rating]' ,@trusted.rating,class: 'form-control',:required => true %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>

      <%end%>
      </div>
<div class="col-xs-1"></div>
</div>
			
		</div>
		
	</div>
</div>