<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-9">Expert</div>
					<div class="col-xs-1">
					  <a href="<%= admins_addtrusted_path %>" class="btn btn-success">
					  Add Trusted By Thousands</a>
					 </div>
				</div>
				
			</div>
			<table class="table table-bordered table-condensed table-striped">
				<thead>
					<tr>
						<th style="text-align: center;font-size:17px;">Sl no.</th>
						<th style="text-align: center;font-size:17px;">Name</th>
						<th style="text-align: center;font-size:17px;">Company</th>
						<th style="text-align: center;font-size:17px;">Description</th>
						<th style="text-align: center;font-size:17px;">Edit</th>
						<th style="text-align: center;font-size:17px;">Delete</th>
					
					</tr>
				</thead>
				<tbody>
						
						<% unless @trusted.empty? %>

								<% @trusted.each_with_index do |key,index| %>
								
								<tr>
									<td><%= index+1 %></td>
									<td><%= raw  key.name %></td>
									<td><%= raw key.company %></td>
									<td><%= raw key.description %></td>
									
									
									<td style="text-align: center;">
							
							         <a href="<%= admins_edittrusted_path(key.id) %>"> 
							         	<%= image_tag 'edit.png', :style =>'width:36px;height:40px;' %>
							         </a>
									</td>
									<td style="text-align: center;">
						           <a href="<%= admins_trustdel_path(key.id) %>" onClick="return confirm('Are you sure you want to delete')">
									   <%= image_tag 'delete.png', :style =>'width:36px;height:40px;' %>
								    </a>
									</td>
								</tr>
								<% end %>
						<% else %>
							<tr>
								<td colspan="7" style="text-align:center;">No Records.......</td>
								
							</tr>
						<% end %>
				
				</tbody>
			</table>		
		</div>
		
	</div>
</div>