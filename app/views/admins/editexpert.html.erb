<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				
					Create Experts
				
				
			</div>

<div class="row" style="margin-top:25px;">	
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
      <%=form_for @expert, :url => {:action => 'expertedit'},:html => {:class => "form-horizontal"} do |f| %>

          <%= hidden_field_tag 'expert[id]', @expert.id %>
        <div class="form-group">
          <label for="inputdesc" class="col-sm-2 control-label" style="font-weight: bold;">Name</label>
          <div class="col-sm-10">
           <%= text_field_tag 'expert[name]' , @expert.name,class: 'form-control',:required => true %>

          </div>
        </div>
        <div class="form-group">
          <label for="inputimage" class="col-sm-2 control-label" style="font-weight: bold;">Designation</label>
          <div class="col-sm-10">
          <%= text_field_tag 'expert[designation]' ,@expert.designation ,class: 'form-control',:required => true %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label" style="font-weight:bold;">Photo</label>
          <div class="col-sm-10">
            <%= f.file_field :image , class: 'form-control' %>
  <%= image_tag @expert.image.thumb('369x369#').url if @expert.image  %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label" style="font-weight: bold;">Description</label>
          <div class="col-sm-10">
            <%= f.text_area :description, :class => 'ckeditor' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>

      <%end%>
      </div>
<div class="col-xs-1"></div>
</div>
			
		</div>
		
	</div>
</div>