<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-10">Pending Transactions</div>
					<div class="col-xs-1"><a href="<%= admins_addaboutsumasika_path %>" class="btn btn-success">Add About Sumasika</a></div>
				</div>
				
			</div>
			<table class="table table-bordered table-condensed table-striped">
				<thead>
					<tr>
						<th style="text-align: center;">Sl no.</th>
						<th style="text-align: center;">Description</th>
						<th style="text-align: center;">photo</th>
						<th style="text-align: center;">Edit</th>
						<th style="text-align: center;">Delete</th>
					
					</tr>
				</thead>
				<tbody>
				
				<% unless @aboutsumasika.empty? %>
				
				<% @aboutsumasika.each_with_index do |key, index| %> 
					<tr>
						<td><%= index+1 %></td>
						<td><%= raw key.content %></td>
						<td><%= image_tag key.image.thumb('200x128#').url if key.image    %></td>
						<td style="text-align: center;">
				<a href="<%= admin_aboutsumasikaedit_path(key.id)  %>">

				  <%= image_tag 'edit.png', :style =>'width:36px;height:40px;' %></a>
						</td>
						<td style="text-align: center;">
			<a href="<%= admin_delete_path(key.id) %>" onClick="return confirm('Are you sure you want to delete')">
						   <%= image_tag 'delete.png', :style =>'width:36px;height:40px;' %>
					    </a>
						</td>
					</tr>
				<% end %>
				<% else %>
					<tr>
						<td colspan="5" style="text-align:center;">No Records.......</td>
						
					</tr>
				<% end %>
				</tbody>
			</table>		
		</div>
		
	</div>
</div>